<section class="usp-icons page-width text-center">
  <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
    {% for block in section.blocks %}
      <div {{ block.shopify_attributes }}>
        {% if block.settings.icon != blank %}
          {{ block.settings.icon | image_url: width: 80 | image_tag }}
        {% endif %}
        <h3 class="font-bold mt-2">{{ block.settings.title }}</h3>
        <p>{{ block.settings.text }}</p>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "USP Icons",
  "max_blocks": 4,
  "blocks": [
    {
      "type": "icon",
      "name": "Icon",
      "settings": [
        { "id": "icon", "type": "image_picker", "label": "Icon" },
        { "id": "title", "type": "text", "label": "Title" },
        { "id": "text", "type": "text", "label": "Caption" }
      ]
    }
  ],
  "presets": [{ "name": "USP Icons" }]
}
{% endschema %}
