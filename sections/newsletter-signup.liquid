<section class="newsletter-signup page-width text-center">
  <h2 class="text-3xl font-bold mb-6">{{ section.settings.heading }}</h2>
  {% form 'customer', class: 'newsletter-form' %}
    <div class="newsletter-form__field-wrapper">
      <input id="Newsletter-{{ section.id }}" type="email" name="contact[email]" class="field__input" value="{{ form.email }}" aria-required="true" autocorrect="off" autocapitalize="off" autocomplete="email" placeholder="{{ 'newsletter.label' | t }}" required>
      <button type="submit" class="btn ml-2">{{ section.settings.button_label }}</button>
    </div>
    {% if form.errors %}
      <small class="newsletter-form__message form__message">{{ form.errors.messages.email }}</small>
    {% endif %}
    {% if form.posted_successfully? %}
      <p class="newsletter-form__message newsletter-form__message--success form__message" id="Newsletter-success--{{ section.id }}" tabindex="-1">{{ 'newsletter.success' | t }}</p>
    {% endif %}
  {% endform %}
</section>

{% schema %}
{
  "name": "Newsletter Signup",
  "settings": [
    { "id": "heading", "type": "text", "label": "Heading", "default": "Subscribe" },
    { "id": "button_label", "type": "text", "label": "Button label", "default": "Subscribe" }
  ],
  "presets": [{ "name": "Newsletter Signup" }]
}
{% endschema %}
