<section class="press-logos page-width text-center">
  <div class="flex flex-wrap items-center justify-center gap-8">
    {% for block in section.blocks %}
      {% if block.settings.logo != blank %}
        {{ block.settings.logo | image_url: width: 200 | image_tag: class: 'mx-4' }}
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Press Logos",
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        { "id": "logo", "type": "image_picker", "label": "Logo image" }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [{ "name": "Press Logos" }]
}
{% endschema %}
